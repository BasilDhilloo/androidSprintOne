<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".UsersView.InitialInterview.InitialInterviewActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="402dp"
        android:layout_height="722dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/caseInfo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/belleza"
                android:text="Testing Information"
                android:textAlignment="center"
                android:textColor="@color/primary_color"
                android:textSize="30sp"
                android:textStyle="bold" />


                <AutoCompleteTextView
                    android:id="@+id/autoTestingSite"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@+id/caseInfo_title"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@color/lightgrey"
                    android:clickable="true"
                    android:completionThreshold="1"
                    android:hint="Recent Covid Testing Site"
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/primary_color"
                    android:textSize="18dp"
                    tools:ignore="KeyboardInaccessibleWidget" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtSiteName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/autoTestingSite"
                android:layout_margin="4dp"
                android:text=""
                android:background="@color/lightgrey"
                android:textColorHint="@color/primary_color"
                android:hint="Site Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSiteName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_color"
                    android:text=""/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtSpecimenDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSiteName"
                android:layout_margin="4dp"
                android:text=""
                android:background="@color/lightgrey"
                android:textColorHint="@color/primary_color"
                android:hint="Specimen Date">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSpecimenDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_color"
                    android:text=""/>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:layout_below="@id/txtSiteName"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="335dp"
                android:layout_marginLeft="100dp"
                android:background="@color/lightgrey"
                android:scaleType="fitCenter"
                android:src="@drawable/cal1" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtReportDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSpecimenDate"
                android:layout_margin="4dp"
                android:text=""
                android:background="@color/lightgrey"
                android:textColorHint="@color/primary_color"
                android:hint="Report Date">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtReportDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_color"
                    android:text=""/>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:layout_below="@id/txtSpecimenDate"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="335dp"
                android:layout_marginLeft="100dp"
                android:background="@color/lightgrey"
                android:scaleType="fitCenter"
                android:src="@drawable/cal1" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>