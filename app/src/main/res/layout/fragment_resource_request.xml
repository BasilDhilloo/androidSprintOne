<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UsersView.InitialInterview.EpilinkageCongregateFragment">


    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        >

        <RelativeLayout
            android:id="@+id/relCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/resReqType"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="10dp"
                android:hint="Monitoring Start Date"
                android:background="@color/lightgrey"
                app:hintTextColor="@color/primary_color"
                android:textColorHint="@color/primary_color"
                android:text=""
                android:textSize="12sp"
                >

                <AutoCompleteTextView
                    android:id="@+id/resReqTypeAuto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/lightgrey"
                    android:textColor="@color/primary_color"
                    android:padding="5dp"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/comments"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="100dp"
                android:background="@color/lightgrey"
                android:hint="Monitoring End Data"
                android:text=""
                android:textColorHint="@color/primary_color"
                android:textSize="12sp"
                app:hintTextColor="@color/primary_color">

                <AutoCompleteTextView
                    android:id="@+id/edtDeceasedDate"
                    android:layout_width="385dp"
                    android:layout_height="40dp"
                    android:background="@color/lightgrey"
                    android:textColor="@color/primary_color"
                    android:padding="5dp"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/calDeceasedDate"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="107dp"
                android:layout_marginLeft="320dp"
                android:scaleType="fitCenter"
                android:background="@color/lightgrey"
                android:src="@drawable/cal1" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/monitoringType"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="160dp"
                android:background="@color/lightgrey"
                android:hint="No of days left to be monitored?"
                android:text=""
                android:textColorHint="@color/primary_color"
                android:textSize="12sp"
                app:hintTextColor="@color/primary_color">

                <AutoCompleteTextView
                    android:id="@+id/monitoringTypeAuto"
                    android:layout_width="385dp"
                    android:layout_height="40dp"
                    android:background="@color/lightgrey"
                    android:textColor="@color/primary_color"
                    android:padding="5dp"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:theme="@style/Theme.CovidWatch"
                android:id="@+id/healthconditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:hint="Monitoring Type"
                android:textColor="@color/primary_color"
                android:textColorHint="@color/primary_color">

                <AutoCompleteTextView
                    android:id="@+id/monType"
                    android:layout_width="match_parent"
                    android:theme="@style/Theme.CovidWatch"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="220dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="5"
                    android:ems="10"
                    android:background="@color/lightgrey"
                    android:clickable="true"
                    android:completionThreshold="5"
                    android:textSize="18dp"
                    tools:ignore="KeyboardInaccessibleWidget" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneNumb"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="280dp"
                android:background="@color/lightgrey"
                android:hint="Phone Number for monitoring"
                android:text=""
                android:textColorHint="@color/primary_color"
                android:textSize="12sp"
                app:hintTextColor="@color/primary_color">

                <AutoCompleteTextView
                    android:id="@+id/phoneNumbAuto"
                    android:layout_width="385dp"
                    android:layout_height="40dp"
                    android:background="@color/lightgrey"
                    android:textColor="@color/primary_color"
                    android:padding="5dp"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="340dp"
                android:background="@color/lightgrey"
                android:hint="Email for monitoring"
                android:text=""
                android:textColorHint="@color/primary_color"
                android:textSize="12sp"
                app:hintTextColor="@color/primary_color">

                <AutoCompleteTextView
                    android:id="@+id/emailAuto"
                    android:layout_width="385dp"
                    android:layout_height="40dp"
                    android:background="@color/lightgrey"
                    android:textColor="@color/primary_color"
                    android:padding="5dp"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>



            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="520dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/red2"
                android:text="Cancel" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="520dp"
                android:layout_marginLeft="280dp"
                android:backgroundTint="@color/purple_700"
                android:text="Save" />

        </RelativeLayout>


    </ScrollView>



</FrameLayout>
