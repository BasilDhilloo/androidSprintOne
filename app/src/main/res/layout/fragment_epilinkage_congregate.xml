            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/additionalInfoCntct"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="100dp"
                android:background="@color/lightgrey"
                android:hint="Resource Request Date"
                android:text=""
                android:textColorHint="@color/primary_color"
                android:textSize="12sp"
                app:hintTextColor="@color/primary_color">

                <AutoCompleteTextView
                    android:id="@+id/additionalInfoCntctAuto"
                    android:layout_width="385dp"
                    android:layout_height="40dp"
                    android:background="@color/lightgrey"
                    android:textColor="@color/primary_color"
                    android:padding="5dp"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/comments"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="160dp"
                android:background="@color/lightgrey"
                android:hint="Comments"
                android:text=""
                android:textColorHint="@color/primary_color"
                android:textSize="12sp"
                app:hintTextColor="@color/primary_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/commentsAuto"
                    android:layout_width="385dp"
                    android:layout_height="40dp"
                    android:background="@color/lightgrey"
                    android:textColor="@color/primary_color"
                    android:padding="5dp"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/calDeceasedDate"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="320dp"
                android:scaleType="fitCenter"
                android:background="@color/lightgrey"
                android:src="@drawable/cal1" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/monitoringType"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="220dp"
                android:background="@color/lightgrey"
                android:hint="Monitoring Type"
                android:text=""
                android:textColorHint="@color/primary_color"
